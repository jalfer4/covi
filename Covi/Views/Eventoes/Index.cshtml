@model IEnumerable<Covi.Models.Evento>

@{
    ViewData["Title"] = "Index";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Lista de eventos</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <a asp-action="Create">Nuevo evento</a>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    @*@Html.DisplayNameFor(model => model.FechaAlta)*@ Fecha
                                </th>
                                <th>
                                    @*@Html.DisplayNameFor(model => model.NombreArtista)*@ Nombre del artista
                                </th>
                                <th>
                                    @*@Html.DisplayNameFor(model => model.TipoEventoNavigation)*@ Tipo de evento
                                </th>
                                <th> </th>
                                <th> </th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaAlta)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NombreArtista)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.TipoEventoNavigation.Nombre)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.EventoId">Editar</a>
                                </td>
                                <td>
                                    <a asp-action="Delete" asp-route-id="@item.EventoId">Eliminar</a>
                                </td>

                            </tr>
                            }

                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
 