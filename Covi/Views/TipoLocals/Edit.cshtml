@model Covi.Models.TipoLocal

@{
    ViewData["Title"] = "Edit";
}


<br />
<br />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Editando un tipo de local
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <form asp-action="Edit">
                            <div class="form-group">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="TipoLocald" />
                                <div class="form-group">
                                    <label asp-for="Nombre" class="control-label"></label>
                                    <input asp-for="Nombre" class="form-control" />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                                <p class="help-block">Nombre que se usara para descripcion de un tipo de local.</p>
                            </div>

                            <div class="form-group">
                                <label>Estados</label>

                                <div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="EstaHabilitado" /> @Html.DisplayNameFor(model => model.EstaHabilitado)
                                    </label>
                                </div>

                                <div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="EstaPublicado" /> @Html.DisplayNameFor(model => model.EstaPublicado)
                                    </label>
                                </div>

                            </div>

                            <input type="submit" value="Aceptar" class=" btn btn-lg btn-warning" />

                            <input type="submit" value="Cancelar" asp-action="Index" class="btn btn-success btn-lg" />


                        </form>
                    </div>
                    <!-- /.col-lg-6 (nested) -->

                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
 

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
