@model IEnumerable<Covi.Models.TipoUsuario>

@{
    ViewData["Title"] = "Index";
}
 
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Lista de tipos de usuarios</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <a asp-action="Create">Nuevo tipo de usuario</a>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th> @Html.DisplayNameFor(model => model.Nombre)</th>
                                <th> </th>
                                <th> </th>
                               
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nombre)
                                    </td>
                                    <td>
                                           <a asp-action="Edit" asp-route-id="@item.TipoUsuarioId">Editar</a>
                                    </td>
                                    <td>
                                        <a asp-action="Delete" asp-route-id="@item.TipoUsuarioId">Eliminar</a>
                                    </td>
                                    
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>


                 
